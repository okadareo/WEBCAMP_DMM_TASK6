<% book.book_comments.each do |book_comment| %>
  <tr><% book_comment_user = book_comment.user %>
    <td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
    　<td class="comment_create">
    　<%= link_to book_comment.user.name, book_comment.user, remote: true %>
    　<td>
    　<td><%= book_comment.comment %></td>
    
    　<% if book_comment.user == current_user %>
    　<td class="comment_destroy">
      <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
    　</td>
    　<% end %>
  </tr>
<% end %>



